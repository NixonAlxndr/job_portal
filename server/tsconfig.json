{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Node ESM settings
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "skipLibCheck": true,

    // Alias
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },

  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
